generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String
  email String @unique
  password String?
  role String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  session Session[]
}

model Session {
  id String @id @default(cuid())
  
  userId String
  user User @relation(fields: [userId], references: [id])
}